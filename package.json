{
  "name": "slot",
  "scripts": {
    "watch-js": "rollup src/index.js -p terser -w -m -o js/bundle.js",
    "watch-css": "sass --style compressed --watch src/index.scss styles/bundle.css",
    "build-js": "rollup src/index.js -p terser -m -o js/bundle.js",
    "build-css": "sass --style compressed src/index.scss styles/bundle.css",
    "serve": "serve -p 5000",

    "build": "npm run build-js && npm run build-css"
  },
  "dependencies": {
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.8",
    "serve": "^11.3.2"
  },
  "devDependencies": {
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1"
  }
}
